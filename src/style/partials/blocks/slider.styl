.b-slider
	// height calc(634px + 85px)
	height auto
	// min-height 112px
	padding-bottom 112px
	max-height 634px
	color #ffffff
	position relative
	background-image radial-gradient(at bottom, #12628C, #042A43)

.b-slide
	position relative
	height 100%

.b-slide__title
	font-size 58px
	font-weight 700
	line-height 54px
	margin-bottom 33px
	margin-top calc(185px + 85px)
	letter-spacing 1.7px
	z-index 1
	position relative

.b-slide__text
	font-size 16px
	font-weight 400
	line-height 20px
	margin-bottom 58px
	letter-spacing 0.4px
	z-index 1
	position relative

.b-slide__button
	display block
	width 241px

.b-slide__image
	position absolute
	top 106px
	right -71px
	height 100%
	width 100%
	background-repeat no-repeat
	background-image url('../images/slide-1.png')
	background-position top right
	z-index 0
	img
		position absolute
		left 50%

.b-slider__dots
	position absolute
	bottom 37px
	left 0
	right 0
	text-align center
	z-index 1

.b-slider__dot
	position relative
	display inline-block
	width 14px
	height 14px
	border-radius 5px
	background-color #1b3349
	cursor pointer
	& + .b-slider__dot
		margin-left 16px

.b-slider__dot--selected
	&::before
		content ''
		display block
		position absolute
		top 2px
		right 2px
		bottom 2px
		left 2px
		border-radius 3px
		background-color #12628C